{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "React": true
  },

  "plugins": [
    "react"
  ],

  "extends": "airbnb",

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },

  "rules": {
    "semi": ["error", "never"]
  }
}
